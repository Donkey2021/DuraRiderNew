                                <Frame
                                    Margin="0,3,0,0"
                                    Padding="0"
                                    BackgroundColor="#6EB76C"
                                    BorderColor="WhiteSmoke"
                                    CornerRadius="5"
                                    HeightRequest="8"
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="StartAndExpand"
                                    WidthRequest="10" />
                            </StackLayout>
