                                    Text="Pickup"
                                    TextColor="#908FB3"
                                    VerticalOptions="StartAndExpand"
                                    WidthRequest="60" />
                                <Label
                                    FontFamily="ProximaNovaRegular"
                                    FontSize="12"
                                    HorizontalOptions="Start"
                                    Text="2540 Capt. M. Reyes, Makati, Metro Manila Phillipnes"
                                    VerticalOptions="StartAndExpand" />
                            </StackLayout>
                        </StackLayout>

                        <Grid Margin="0,8,0,10">
                            <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                                <Label
                                    FontSize="12"
                                    Text="Total Distance"
                                    TextColor="#908FB3" />
                                <Label HorizontalOptions="StartAndExpand" Text="5.4 km" />
                            </StackLayout>
                            <Frame
                                Grid.Column="1"
                                Padding="10,8"
                                BackgroundColor="#211E66"
                                BorderColor="WhiteSmoke"
                                CornerRadius="3"
                                HorizontalOptions="EndAndExpand">
                                <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                                    <Image
                                        HeightRequest="12"
                                        HorizontalOptions="Start"
                                        Source="navigate"
                                        WidthRequest="12" />
                                    <Label
                                        FontSize="10"
                                        HorizontalOptions="StartAndExpand"
                                        Text="Navigate" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding NavigateCommand}" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </Frame>
                        </Grid>
                        <Button
                            Command="{Binding ReachedPickupLocationCommand}"
                            FontSize="14"
                            Text="Reached Pickup Location" />
